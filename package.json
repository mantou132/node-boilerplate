{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "description": "node lib boilerplate",
  "main": "index.js",
  "scripts": {
    "copyfile": "node -r fs -e \"fs.copyFileSync('src/native/index.d.ts','native/index.d.ts')\"",
    "install": "neon build --release && npm run copyfile",
    "build": "tsc",
    "watch": "tsc -watch",
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "test": "npm run install && jest --coverage",
    "prepare": "husky install && npm run lint && npm run test && npm run build"
  },
  "files": [
    "/index.*",
    "/lib/",
    "/src/",
    "/native/",
    "!/native/target/**",
    "!/native/index.node",
    "!/native/artifacts.json"
  ],
  "keywords": [
    "lib",
    "neon",
    "boilerplate"
  ],
  "author": "mt",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantou132/node-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mantou132/node-boilerplate/issues"
  },
  "homepage": "https://github.com/mantou132/node-boilerplate#readme",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "neon-cli": "^0.8.2",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
