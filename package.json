{
  "name": "vscode-boilerplate",
  "displayName": "Vscode Boilerplate",
  "version": "0.0.1",
  "icon": "logo.png",
  "description": "vscode extension boilerplate",
  "publisher": "mantou",
  "categories": [
    "Other"
  ],
  "main": "build/index.js",
  "activationEvents": [
    "onCommand:extension.helloWorld"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc",
    "watch": "tsc -watch",
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "test": "jest --coverage",
    "prepare": "husky install && npm run lint && npm run test && npm run build"
  },
  "files": [
    "/build/",
    "/src/"
  ],
  "keywords": [
    "cli",
    "boilerplate"
  ],
  "author": "mt",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantou132/node-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mantou132/node-boilerplate/issues"
  },
  "homepage": "https://github.com/mantou132/node-boilerplate#readme",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
