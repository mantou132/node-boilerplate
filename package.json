{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "description": "node lib boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -watch",
    "lint": "eslint --ext .ts --fix src/",
    "test": "jest --coverage",
    "prepare": "npm run lint && npm run test && npm run build"
  },
  "files": [
    "/index.js",
    "/index.js.map",
    "/index.d.ts",
    "/index.d.ts.map",
    "/lib/",
    "/src/"
  ],
  "keywords": [
    "lib",
    "boilerplate"
  ],
  "author": "mt",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.47",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^2.7.0",
    "jest": "^24.9.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
